<ul class="posts">
{% for post in postslist | reverse %}
  <li class="posts__item{% if post.url == url %} posts__item--active{% endif %}">
    <a href="{{ post.url | url }}" class="posts__item__link">
      {% if post.data.title %}
        <h3 class="posts__item__title">{{ post.data.title }}</h3>
      {% else %}
        <code>{{ post.url }}</code>
      {% endif %}
    </a>
    {# {% for tag in post.data.tags %}
      {%- if collections.tagList.indexOf(tag) != -1 -%}
      {% set tagUrl %}/tags/{{ tag }}/{% endset %}
      <a href="{{ tagUrl | url }}" class="tag">{{ tag }}</a>
      {%- endif -%}
    {% endfor %} #}
  </li>
{% endfor %}
</ul>
