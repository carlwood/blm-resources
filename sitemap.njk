---
pagination:
  data: collections.all
  size: 20
  alias: entries
layout: layouts/base.njk
permalink: /sitemap/{% if pagination.pageNumber > 0 %}{{ pagination.pageNumber }}/{% endif %}
---
<div class="container container--narrow">
  <h1 class="page-heading">Sitemap</h1>
  <table>
    <thead>
      <th>URL</th>
      <th>Page Title</th>
    </thead>
    <tbody>
  {%- for entry in entries %}
    <tr>
      <td><a href="{{ entry.url }}"><code>{{ entry.url }}</code></a></td>
      <td>{{ entry.data.title }}</td>
    </tr>
  {%- endfor %}
    </tbody>
  </table>
</div>